<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="INSTRUCCIONES"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="7dp"
        android:text="El Buscaminas es un juego sencillo y divertido."
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:padding="7dp"
        android:text="El objetivo es descubrir todas las casillas que no tienen minas."
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="1.  Haz clic en una casilla para empezar."
        android:textColor="#171717"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="2.  Si aparece un número, indica cuántas minas hay alrededor de esa casilla."
        android:textColor="#171717"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="3.  Usa esa información para deducir dónde están las minas."
        android:textColor="#171717"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="4.   Haz clic derecho para marcar una casilla con una bandera si crees que ahí hay una mina."
        android:textColor="#171717"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="5.   Si haces clic en una mina, ¡pierdes! Pero si descubres todas las casillas sin minas, ¡ganarás!"
        android:textColor="#171717"
        android:textSize="18sp"
        android:textStyle="italic" />

    <RadioButton
        android:id="@+id/instrDone"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Entendido"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:padding="16dp" />

</LinearLayout>